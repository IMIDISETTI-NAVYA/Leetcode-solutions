class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        ListNode* prv = NULL;
        ListNode* curr = head;
        ListNode* frwd = NULL;

        while(curr != NULL){
            frwd = curr->next; 
            curr->next = prv; 

            prv=curr;
            curr=frwd;
        }

        return prv;
    }
};
