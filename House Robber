class Solution {
public:
    int f(int i, vector<int>& arr, vector<int>& dp){
        if(i >= arr.size()) return 0;

        if(dp[i] != -1) return dp[i];

        int rob = arr[i] + f(i+2, arr, dp);
        int notRob = f(i+1, arr, dp);

        return dp[i] =  max(rob, notRob);
    }
    int rob(vector<int>& nums) {
        int n = nums.size();

        vector<int> dp(n+1, -1);

        int ans = f(0, nums, dp);

        return ans;
    }
};
