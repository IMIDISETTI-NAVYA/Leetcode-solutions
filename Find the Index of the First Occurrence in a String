class Solution {
public:
    int strStr(string haystack, string needle) {
        int n= haystack.size();
        int m = needle.size();
        int idx=-1;
        for(int i=0;i<n;i++){
            int j=0,k=i;
            while((haystack[k]==needle[j]) && j<m && k<n){
                j++;k++;
            }
            if(j==(m)){
                idx = i;
                break;
            }
        }
        return idx;
    }
};
